{
  "description": "Add ons to remove the paywall.",
  "name": "Break the wall",
  "manifest_version": 2,
  "version": "1.0",
  "icons": {
    "48": "wall-icon.png"
  },
  "background": {
    "scripts": ["paywall.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "wall-icon.png",
    "default_title": "Break the wall"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "activeTab",
    "menus",
    "notifications"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "march@devstring.com"
    }
  }
}
